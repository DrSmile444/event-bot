{
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "env": {
    "es2021": true
  },
  "ignorePatterns": [
    "!src/**/*.{ts,js}",
    "node_modules"
  ],
  "root": true,
  "extends": [
    "./.eslint/typescript.eslintrc.json",
    "./.eslint/node.eslintrc.json",
    "./.eslint/smile-style.eslintrc.json",
    "./.eslint/prettier.eslintrc.json"
  ],
  "rules": {
    "consistent-return": "off"
  }
}
